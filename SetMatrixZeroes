//most optimised

#include <bits/stdc++.h>

void setZeros(vector<vector<int>> &matrix)
{
	
	int col0=1;
        int m= matrix.size();
        int n= matrix[0].size();
        //taking row[0] and col[0] itself as indicator 
        for(int i =0; i< m; i++){
            for(int j=0;j<n; j++){
                if(matrix[i][j]==0){
                    matrix[i][0]=0; //marking row

                    //MARKING COLUMNS 
                    if(j!=0){
                        matrix[0][j]=0;
                    }
                    else{
                        col0=0;
                    }
            }
        }
        }

        // now wherever there is 1 make all 0;
        //work on except row[0] and col [0];

        for(int i=1;i<m ; i++){
            for(int j=1; j<n;j++){
                if(matrix[i][j]!=0){
                    if(matrix[i][0]==0 || matrix[0][j]==0){
                        matrix[i][j]=0;
                    }
                }
            }
        }

        //work on row 0
        if(matrix[0][0]==0){
            for(int i=0;i<n;i++){
                matrix[0][i]=0;
            }
        }

        //work on col0

        if(col0==0){
            for(int i=0;i<m;i++) 
            matrix[i][0]=0;
        }
}
